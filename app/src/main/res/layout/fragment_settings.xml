<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SettingsFragment"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTheme"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:textSize="20sp"
                android:text="@string/button_theme"
                android:textColor="@color/white"
                android:backgroundTint="@color/medium_dark"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                />

            <RadioGroup
                android:id="@+id/radioBtnLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:id="@+id/btnEn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english"
                    android:contentDescription="en"/>
                <RadioButton
                    android:id="@+id/btnFr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/french"
                    android:contentDescription="fr"/>


                <RadioButton
                    android:id="@+id/btnPt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/portuguese"
                    android:contentDescription="pt"/>


            </RadioGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLanguage"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:textSize="20sp"
                android:text="@string/button_language"
                android:textColor="@color/white"
                android:backgroundTint="@color/medium_dark"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                />
        </LinearLayout>
</FrameLayout>